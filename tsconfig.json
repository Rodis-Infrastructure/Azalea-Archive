{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDirs": [
            "./bot",
            "./database"
        ],
        "paths": {
            "@bot/*": [
                "./bot/*"
            ],
            "@database/*": [
                "./database/*"
            ]
        },
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/discord-api-types"
        ]
    },
    "include": [
        "./bot/**/*.ts",
        "./database/**/*.ts"
    ]
}